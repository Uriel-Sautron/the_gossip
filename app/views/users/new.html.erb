  <div class="form-group">


  <%= form_tag url_for(action: 'create'), method: 'post' do %>
      <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >
    <div class='form-group' >
      <p><%= label_tag 'First_Name' %></p>
      <%= text_field_tag 'first_name', @user.first_name, class: 'form-control', placeholder: 'Entrer votre prénom'  %>
    </div>
      
    <div class='form-group'>
      <p><%= label_tag 'Last_Name' %></p>
      <%= text_field_tag 'last_name', @user.last_name, class: 'form-control', placeholder: 'Entrer votre nom' %>
    </div>
    
    <div class='form-group'>
      <p><%= label_tag 'Age' %></p>
      <%= number_field_tag 'age', @user.age, class: 'form-control', placeholder: 'Entrer votre age' %>
    </div>
      
    <div class='form-group'>
      <p><%= label_tag 'Description' %></p>
      <%= text_area_tag 'description', @user.description, class: 'form-control' %>
    </div>
    
    <div class='form-group'>
      <p><%= label_tag 'Email' %></p>
      <%= text_field_tag 'email', @user.email, class: 'form-control', placeholder: 'Email' %>
    </div>
    
    <div class='form-group'>
      <p><%= label_tag 'Password' %></p>
      <%= password_field_tag 'password', @user.password, class: 'form-control', placeholder: 'Password' %>
    </div>
  

  <%= submit_tag "Envoyer votre commentaire", class: 'btn btn-primary' %>

  <% end %>
  
  </div>

  <% if @user.errors.any? %>
  <p>Nous n'avons pas réussi à créer un utilisateur pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul>
<% end %>